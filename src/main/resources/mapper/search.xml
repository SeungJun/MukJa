<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.trip.mukja.model.mapper.SearchMapper">

    <resultMap id="search" type="searchDTO">
        <result column="latitude" property="latitude"/>
        <result column="longitude" property="longitude"/>
        <result column="first_img" property="first_img"/>
        <result column="title" property="title"/>
        <result column="addr1" property="addr1"/>
        <result column="addr2" property="addr2"/>
    </resultMap>

    <select id="getSearchList" parameterType="map" resultMap="search">
        select latitude,longitude,first_image,title,addr1,addr2
        from attraction_info
       where sido_code = #{areaCode} and
        gugun_code = #{sigunguCode} and
        content_type_id = #{contentTypeId} and
        title LIKE '%${keyword}%'
    </select>

</mapper>